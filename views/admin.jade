doctype html
html(lang="en")
  head
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css")
    meta(http-equiv='refresh', content='10')

  body
    div.clearfix
      div.wrapper  
        div.question-card.w3-card-4
          div.question.w3-container.w3-blue
            h1 Q#{question.questionID}: #{question.titleQuestion}
          div.responses.w3-container
           - var i = 0;
           each option in question.answers
            - i++;
              div.response
                a.w3-button.w3-block= option
          div.admin
            a(href="/admin?action=pre")
              button(type="button") Previous Question  
            a(href="/admin?action=next")
              button(type="button") Next Question  
          footer.w3-container.w3-blue
            h5 There have been #{count} answers submitted so far!
